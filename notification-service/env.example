# Server Configuration
PORT=3001
NODE_ENV=development
LOG_LEVEL=info

# Database (MongoDB only - no Redis needed)
MONGODB_URI=mongodb://localhost:27017/versant_notifications

# API Security
NOTIFICATION_API_KEYS=default-api-key,your-secure-api-key

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,https://crt.pydahsoft.in

# Email Service (Brevo) - Same as backend
BREVO_API_KEY=your_brevo_api_key
SENDER_EMAIL=noreply@versant.com
SENDER_NAME=VERSANT System

# Email Service (SMTP Fallback)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# SMS Service (BulkSMS)
BULKSMS_API_KEY=your_bulksms_api_key
